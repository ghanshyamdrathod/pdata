<h1>Listing laptops</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Case no</th>
      <th>Serial no</th>
      <th>Company</th>
      <th>Model no</th>
      <th>Mac</th>
      <th>Stolen date</th>
      <th>Stolen place</th>
      <th>Remarks</th>
      <th>Cr no</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laptops.each do |laptop| %>
      <tr>
        <td><%= laptop.user_id %></td>
        <td><%= laptop.case_no %></td>
        <td><%= laptop.serial_no %></td>
        <td><%= laptop.company %></td>
        <td><%= laptop.model_no %></td>
        <td><%= laptop.mac_id %></td>
        <td><%= laptop.stolen_date %></td>
        <td><%= laptop.stolen_place %></td>
        <td><%= laptop.remarks %></td>
        <td><%= laptop.cr_no %></td>
        <td><%= laptop.image %></td>
        <td><%= link_to 'Show', laptop %></td>
        <td><%= link_to 'Edit', edit_laptop_path(laptop) %></td>
        <td><%= link_to 'Destroy', laptop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

