<%= form_for @detail, :html => {:multipart => true}  do |f| %>
  <% if @detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@detail.errors.count, "error") %> prohibited this detail from being saved:</h2>

      <ul>
      <% @detail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <td>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :record_type %><br>
          <%= f.select :record_type, ["mcr", "hs*", "tadipar*", "parole farley jump*", "wanted",      "suspect", "most 500", "other"]%>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <div class="field">
          <label>Avatar</label>
          <%= image_tag(@detail.avatar_url(:thumb)) if @detail.avatar? %>
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :address %><br>
          <%= f.text_area :address, rows: 6, cols: 40 %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <div class="field">
          <%= f.label :sections %><br>
          <%= f.text_field :sections %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :crime_details %><br>
          <%= f.text_field :crime_details %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <div class="field">
          <%= f.label :police_station, "Police Station" %><br>
          <%= f.text_field :police_station %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :reference_no, "Reference Number" %><br>
          <%= f.text_field :reference_no %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <div class="field">
          <%= f.label :remarks, "Remarks" %><br>
          <%= f.text_area :remarks, rows: 8, cols: 40  %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :remarks2, "Remarks-2" %><br>
          <%= f.text_area :remarks2, rows: 8, cols: 40  %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <div class="field">
          <%= f.label :history, "History" %><br>
          <%= f.text_field :history %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :latest_activity, "Latest Activity" %><br>
          <%= f.text_field :latest_activity %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <div class="field">
          <%= f.label :crn, "Crime Recird Number" %><br>
          <%= f.text_field :crn %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :last_arrest %><br>
          <%= f.text_field :last_arrest %>
        </div>
      </td>
    </tr>
  </table>

  <br/>
  <br/>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
