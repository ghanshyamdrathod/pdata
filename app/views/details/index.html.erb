<h1>Listing details</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Avatar</th>
      <th>Police station</th>
      <th>Crn</th>
      <th>Sections</th>
      <th>Crime details</th>
      <th>Last arrest</th>
      <th>Record type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.name %></td>
        <td><%= detail.address %></td>
        <td><%= image_tag detail.avatar_url(:small_thumb) if detail.avatar? %></td>
        <td><%= detail.police_station %></td>
        <td><%= detail.crn %></td>
        <td><%= detail.sections %></td>
        <td><%= detail.crime_details %></td>
        <td><%= detail.last_arrest %></td>
        <td><%= detail.record_type %></td>
        <td><%= link_to 'Show', detail %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
        <td><%#= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

