<h1>Listing mobiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Case no</th>
      <th>Imei</th>
      <th>Stolen date</th>
      <th>Stolen place</th>
      <th>Last sim used</th>
      <th>Remarks</th>
      <th>Cr no</th>
      <th>Image</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mobiles.each do |mobile| %>
      <tr>
        <td><%= mobile.user_id %></td>
        <td><%= mobile.case_no %></td>
        <td><%= mobile.imei %></td>
        <td><%= mobile.stolen_date %></td>
        <td><%= mobile.stolen_place %></td>
        <td><%= mobile.last_sim_used %></td>
        <td><%= mobile.remarks %></td>
        <td><%= mobile.cr_no %></td>
        <td><%= mobile.image %></td>
        <td><%= mobile.company %></td>
        <td><%= link_to 'Show', mobile %></td>
        <td><%= link_to 'Edit', edit_mobile_path(mobile) %></td>
        <td><%= link_to 'Destroy', mobile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mobile', new_mobile_path %>
